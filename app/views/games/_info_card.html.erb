<% if @open_games.include?(game) %>
  <% if player_signed_in? && PlayerTeam.find_by(active: true, player_id: current_player, team_id: game.teams[0] || game.teams[1]) %>
    <h5 class="link-orange"><%= link_to game.name, game_path(game) %></h5>
  <% else %>
    <h5 class="link-blue"><%= link_to game.name, game_path(game) %></h5>
  <% end %>
<% else %>
  <h5 class="link-grey"><%= link_to game.name, game_path(game) %></h5>
<% end %>
<p><%= game.address %></p>
