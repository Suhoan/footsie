<%= simple_form_for(@game) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price, input_html: { min: '0', step: '0.25' } %>
  <%= f.input :pitch_identifier %>
  <%= f.input :pitch_type, collection: ["grass", "3-G", "astroturf"] %>
  <%= f.input :starting_date %>
  <%= f.input :ending_date %>
  <%= f.input :recurring_rule %>
  <%= f.input :team_size, :collection => 5..11, :prompt => "Select the size of each team" %>
  <%= f.input :gender, collection: ["male", "female", "co-ed"] %>
  <%= f.input :indoor %>
  <%= f.input :photo, as: :file, label: "Upload an image (optional)" %>
  <%= f.submit 'Host this game', class: 'btn btn-primary'%>
<% end %>
