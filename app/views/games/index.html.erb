  <div class="hero-text">
    <h1>Footsie</h1>
    <h3>Find your squad for casual football fun!</h3>
    <button class="btn btn-primary">Enter your postcode</button>
  </div>
</div>
<div class="container">
  <div class="row ">
    <div class="col-md-12 mt-2 ">
      <div class="row">
        <% @games.each do |game| %>
          <div class="col-md-3" style="color: <%= @open_games.include?(game) ? 'green' : 'red' %>;">
            <h2><%= game.name %></h2>
            <p><%= game.address %></p>
            <p>Â£<%= game.price %> per person</p>
            <p><%= link_to "Read more", game_path(game) %></p>
